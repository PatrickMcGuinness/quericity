.row.mcq
  .row
    .col-xs-12{style:"margin-top:20px;"}
      %table.table.table-bordered.mcq
        %thead
          %tr
            %th.col-xs-7
              Answer
            %th.col-xs-4
              Correct
            %th.col-xs-1  
        %tbody
          %tr 
            %td.col-xs-7
              =text_field_tag :answer1, nil,:class => "form-control answer-field"
            %td.col-xs-4
              = radio_button_tag(:option, "option1",nil,class: "radio-option")
              = "Correct"
            %td.col-xs-1
              = link_to "#" do
                %span.glyphicon.glyphicon-remove{style:"color:red;"}
          %tr      
            %td.col-xs-7
              =text_field_tag :answer2, nil,:class => "form-control answer-field"
            %td.col-xs-4
              =radio_button_tag(:option, "option2",nil,class: "radio-option")
              -#=check_box_tag :option2 ,nil, false,:class => "option-2"
              = "Correct"
            %td.col-xs-1
              = link_to "#" do
                %span.glyphicon.glyphicon-remove.remove-option{style:"color:red;"}    
    .col-xs-2.pull-right
      -#=link_to "Remove Answer", "#", :class => "btn btn-primary btn-danger remove-answer"
      -#=link_to "Add Answer", "#", :class => "btn btn-primary btn-success add-answer"
      =hidden_field_tag :options, 2, :class=>"option-rows"          