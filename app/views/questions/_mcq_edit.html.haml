.row.mcq
  .col-xs-12{style:"margin-top:20px;"}
    %table.table.table-bordered.mcq
      %thead
        %tr
          %th.col-xs-7
            Answer
          %th.col-xs-4
            Correct
          %th.col-xs-1  
      %tbody
        -after_loop = 0
        -@question.question_options.each_with_index do |option,index|
          -after_loop = index + 1
          %tr
            %td.col-xs-7
              =text_field_tag "answer#{index+1}",option.answer, :class => "form-control answer-field"
            %td.col-xs-4
              = radio_button_tag(:option, "option#{index+1}","checked",class: "radio-option") if option.is_correct == true
              = radio_button_tag(:option, "option#{index+1}",nil,class: "radio-option") unless option.is_correct == true
              = "Correct"
            %td.col-xs-1
              = link_to "#" do
                %span.glyphicon.glyphicon-remove.remove-option{style:"color:red;"}
        %tr
          %td.col-xs-7
            =text_field_tag "answer#{after_loop + 1}",nil, :class => "form-control answer-field"
          %td.col-xs-4
            = radio_button_tag(:option, "option#{after_loop + 1}",nil,class: "radio-option")
            = "Correct"
          %td.col-xs-1
            = link_to "#" do
              %span.glyphicon.glyphicon-remove.remove-option{style:"color:red;"}        

  .col-xs-2.pull-right
    -#=link_to "Remove Answer", "#", :class => "btn btn-primary btn-danger remove-answer"
    -#=link_to "Add Answer", "#", :class => "btn btn-primary btn-success add-answer"
    =hidden_field_tag :options, @question.question_options.count, :class=>"option-rows"           