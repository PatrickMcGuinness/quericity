    <%= javascript_include_tag "EditQuizBankCtrl" %>
    <%= javascript_include_tag "newQuestionCtrl" %>
    <%= javascript_include_tag "PreviewQuizCtrl" %>
    <%= javascript_include_tag "viewQuestionCntrl" %>
    <%= javascript_include_tag "filters" %>
    <%= javascript_include_tag "services/time_display" %>
    <%= javascript_include_tag "services/upload" %>
    <%= javascript_include_tag "services/quiz_status" %>
    <%= javascript_include_tag "services/message" %>
    <%= favicon_link_tag '/assets/q_icon.png' %>
