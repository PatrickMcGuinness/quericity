    <%= csrf_meta_tags %>
  </head>
  <body>
    <%=render "layouts/header"%>    
    <div ng-app="quizlib">
        <ng-view>
            <div check-active></div>
            <%= yield %>
        </ng-view>
    </div>
    <%=render "layouts/footer"%>   
    
  </body>
</html>