%header
  .navbar.my-nav-bar{role:"banner"}
    .container
      .navbar-header
        %button.navbar-toggle{type:"button",data:{toggle:"collapse",target:".bs-navbar-collapse"}}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar      
        %a{href:"/",class:"navbar-brand",style:"margin-left:12px;"}
          %span.header
            %img{src: "/assets/logo.png",style: "height: 55px;"}
      %nav.collapse.navbar-collapse.bs-navbar-collapse{role:"navigation"}
        -if user_signed_in?  
          %ul.nav.navbar-nav.navbar-right.my-header-nav
            .dropdown.name
              %a{id:"dLabel",role:"button",href:"#",data:{toggle:"dropdown",target:"#"}}
                =current_user.name
                %span.caret 
              %ul.dropdown-menu{role:"menu"}
                %li
                  -if current_user.is_professor?
                    %span.glyphicon.glyphicon-cog
                    %span
                      =link_to "Settings","#"
                  -else
                    %span.glyphicon.glyphicon-user
                    %span 
                      =link_to "Settings","#"
                %li
                  %br
                  %span.glyphicon.glyphicon-off.custom-size
                  %span 
                    =link_to "Log out", destroy_user_session_path, :method => "delete"
                
        -else
          %ul.nav.navbar-nav.navbar-right.my-header-nav2
            %li
              =link_to 'Sign up' , new_user_registration_path
            %li
              =link_to 'Log in' , new_user_session_path
        