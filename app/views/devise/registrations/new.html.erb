<%= devise_error_messages! %>	
<div class = "row">
  <div class = "container">
		<div class = "col-xs-5 col-xs-offset-4" style="text-align:center;">
			<div class="mar-top-20">New to QuizLib?</div>
				<h3 class = "mar-top-10">Sign up</h3>

				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal", id: "sign-up"}) do |f| %>
				  
			    <div class="form-group">
			    	<div class="col-xs-12">
						  <select class="form-control size_area" id="role" name="user[role]">
						    <option disabled="disabled" selected="selected">Select Role</option>
						    <option>Professor</option>
						    <option>Student</option>
						  </select>
						</div>  
					  <br/>
			    </div>
			    <div class="form-group">
			    	<div class="signup_email col-xs-12">
			        <%= f.text_field :first_name,:class => "form-control size_area",:placeholder => "First Name", :id => 'user_registeration_f_name' %>
			      </div>
			    </div>
			    <div class="form-group">
			    	<div class="signup_email col-xs-12">
			        <%= f.text_field :last_name,:class => "form-control size_area",:placeholder => "Last Name", :id => 'user_registeration_l_name' %>
			      </div>
			    </div>
			    <div class="form-group">
			    	<div class="signup_email col-xs-12">
			        <%= f.email_field :email,:class => "form-control size_area",:placeholder => "Email", :id => 'user_registeration_email' %>
			      </div>
			    </div>
			    <div class="form-group">
			    	<div class="signup_password col-xs-12">
			        <%= f.password_field :password,:class => "form-control size_area",:placeholder => "Choose a Password", :id => 'user_registeration_password' %>
			      </div>
			    </div>
				  <div class="form-group">
				  	<div class="col-xs-12">
				  	  <%= f.submit "Sign up!", :class => "btn btn-success btn-lg form-control" %>
				  	</div>  
				  </div></br>
				  <div class = "fbook_text">or sign up with Facebook:</div>
				  <%= link_to "Facebook Sign Up", user_omniauth_authorize_path(:facebook), :class => "size_area btn btn-primary btn-block btn-lg mar-top-10"%></br>
				<% end %>
			  <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
			    <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "mov_l" %><br />
			  <% end -%>
		  </div>
	  </div>
  </div>
</div>
