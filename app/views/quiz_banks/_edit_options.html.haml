.col-xs-2.option-buttons.pull-right
  .btn-group
    %button{type:"button",class:"btn btn-primary btn-top-button dropdown-toggle",data:{toggle:"dropdown"}}
      %span.glyphicon.glyphicon-plus-sign
      Create 
      %span.caret
    %ul.dropdown-menu{role:"menu"}
      %li
        =link_to "Create Section", new_repository_quiz_bank_section_path(@repository,@quiz_bank),remote:true
      %li
        =link_to "Create Question",new_repository_quiz_bank_section_question_path(@repository,@quiz_bank,@section),remote:true
  =link_to "#", class: "btn btn-primary btn-top-button update-quiz-bank" do
    %span.glyphicon.glyphicon-floppy-disk
    Update
  =link_to repository_quiz_bank_path(@repository,@quiz_bank), class: "btn btn-primary btn-top-button", remote: true do
    %span.glyphicon.glyphicon-minus-sign
    Cancel    