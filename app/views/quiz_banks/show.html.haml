=render 'common/tabs'
.tab-content.padding-top40
  .mar_top.creat-repo-div.row
    .col-xs-12
      %h2.quiz-bank-title-show
        = @quiz_bank.title
        -#%span  
          -#=link_to "#",rel: "popover",data:{content: @quiz_bank.description}, style: "margin-left:15px",id: "description-popover" do
            -#%span.glyphicon.glyphicon-comment 
      %h2.quiz-bank-title-edit.hide{data:{id: @quiz_bank.id}}
        %form.form-inline
          .form-group
            %label{for: "title-field"}Edit Title
            %input{type:"text", class:"form-control",id:"title-field",placeholder:"Enter Title", value: @quiz_bank.title}
    .tags.col-xs-7.tags-show
      -@quiz_bank.question_topics.each do |question_topic|
        -if current_user.can_change_repo?(@quiz_bank.repository)
          %span.badge.badge-warning{id: question_topic.id} #{question_topic.topic.title.downcase} <a href="#{question_topic_path(question_topic.id)}" data-remote = true data-method = "delete" data-confirm = "Are you sure?" rel= "tooltip" title = "Remove Tag">x</a>
        -else
          %span.badge.badge-warning{id: question_topic.id} #{question_topic.topic.title.downcase}
    .col-xs-7.tags-edit.hide
      %input{type: "text",class: "form-control tags-text", value: get_comma_separated_tags(@quiz_bank)}            
    .style_r.col-xs-5
      =link_to "Edit", "#", class: "btn btn-primary edit-quiz-bank"
      =link_to "Serve Quiz",new_served_quiz_path(:quiz_bank_id => @quiz_bank.id), class: "btn btn-primary"
      =link_to "Quiz Preview",quiz_preview_repository_quiz_bank_path(@repository,@quiz_bank), class: "btn btn-primary", :target => "_blank"
      -if current_user.can_change_repo?(@quiz_bank.repository)
        =link_to "Add Section", new_repository_quiz_bank_section_path(@repository,@quiz_bank),:class => "btn btn-primary", remote:true  
  .row
    .top_bar_ss.col-xs-12
      %span.mar_l_30
        %b Created on:
        = @quiz_bank.created_at.to_date
      %font.mar_l_30 |
      %span.mar_l_30
        %b Subject:
        =@quiz_bank.subject.title     
  .row
    .col-xs-12
      %ul.breadcrumb.top_bar_s
        %li
          = link_to "My Repos", repositories_path
        -#%li.active
          -#= @repository.title
        %li
          = link_to "My Quiz Banks", repository_path(@repository)
        %li.active
          = @quiz_bank.title
  .row
    .col-xs-12
      %h4 Description
      .description-show
        -if @quiz_bank.description.blank?
          = "Quiz Bank does not has any description"
        -else
          = @quiz_bank.description
      .description-edit.hide
        =text_area_tag :description, @quiz_bank.description,:class => "form-control description-text"           
  .row
    .instructions.col-xs-12.mar-top-20
      =render partial: "quiz_banks/add_instructions", :locals => {:@quiz_bank => @quiz_bank}             
  .row        
    .sections.col-xs-12
      =render partial: "sections/sections", :locals => {:@quiz_bank => @quiz_bank}