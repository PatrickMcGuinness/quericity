
<div class="modal-dialog">
  <div class="modal-content modal_w">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Repository Collaborators</h4>
      <input type="hidden" id="repo_id" value="<%=@repository.id%>">
    </div>

    <div class="modal-body">
      <div id='add-collaborator-panel' class = "custom_b_s">  
        <%=form_for UserRepository.new , :url => repository_collaborators_path(@repository) ,:html=>{ :class=>"form-inline"}  , :remote => true do |f|%>
          <div class="form-group width">
            <input name="email" type="email" class="form-control" id="exampleInputEmail2" placeholder="email address">
          </div>
          <div class="form-group">
            <%= f.select :permission, ['Read', 'Write', 'Admin'] , {} , {:class => 'form-control size_area_pop'}%>
          </div>
          
          <button type="submit" class="btn btn-default" id = "add_b">Add</button>
          <img src="/assets/loading.gif" id="loading-indicator" style="display:none"class = "load_pos" />
        <% end %>
      </div>
      <table id='collaborator-list' class="table">
        <tr>
          <%if @repository.user.name.present? %>
            <td> <%= @repository.user.name %></td>
          <%else%>    
            <td> <%= @repository.user.email %></td>
          <%end%>   
          <td class = "custom_width"> owner </td>
          <td></td>
        </tr>
        
        <% @repository.collaborators.each do |collaborator|%>
          <tr id='collaborator-<%= collaborator.id %>' class = "modal_stream"> 
            <%if collaborator.name.present?%>
              <td> <%= collaborator.name %></td>
            <%else%>  
              <td> <%= collaborator.email %></td>
            <%end%>  
              <td  id='permission-<%= collaborator.id %>'>
                <%= UserRepository.where(:user_id => collaborator.id).first.permission %>
              </td>  
            <td>
              <a href="<%=repository_collaborator_path(:id => collaborator.id)%>" data-method="delete" data-remote = "true">
                <span class="glyphicon glyphicon-remove-circle" id = "del_circ"></span>
                <input type="hidden" id="collaborator_id" value="<%=collaborator.id%>">
              </a>         
            </td>
          </tr>
        <%end%>
      </table>  
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

<script>
  $('#add_b').click(function() {
      $('#loading-indicator').show();

  });
</script>