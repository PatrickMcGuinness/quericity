<%= form_for( [@repository,@quiz_bank, @section], :html => {:id => "section_form", :class => "form-horizontal"}) do |f| %>

  <div class="form-group mar_res">
    <h4 class = "lead"><label class="f_w_r control-label">Title</label><h4>
    <div class="edit_email col-sm-10">
      <%= f.text_field :title,:class => "form-control marg_cor",:placeholder => "Title"%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <% if controller.class == SectionsController and controller.action_name == 'new' %>
        <%= f.submit "Create Section",:class => "btn btn-primary btn-lg active form-control update_bb mar_res_b"%>
      <%elsif controller.class == SectionsController and controller.action_name == 'edit' %>
        <%= f.submit "Update", :class => "btn btn-primary btn-lg active form-control update_b mar_res_b" %>
      <%end%>
    </div>
  </div>
<%end%>