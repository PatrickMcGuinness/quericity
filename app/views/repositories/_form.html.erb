
<%= form_for(@repository, :html => {:class => "form-horizontal"}) do |f| %>

  <div class="form-group mar_res">
    <h4 class = "lead"><label class="f_w_r control-label">Title</label><h4>
    <div class="edit_email col-sm-10">
      <%= f.text_field :title,:class => "form-control marg_cor",:placeholder => "Title"%>
    </div>
  </div>

  <div class="form-group mar_res">
    <h4 class = "lead"><label class="f_w_r control-label">Description</label><h4>
    <div class="edit_email col-sm-10">
      <%= f.text_area :description,:class => "form-control marg_cor",:placeholder => "Description"%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit "Create Repo", :class => "btn btn-default btn-lg active form-control update_b mar_res_b" %>
    </div>
  </div>
<%end%>