=render 'common/tabs'
.tab-content.padding-top40.tab-container
  .row.quiz-analyze
    .col-xs-12.heading
      .col-xs-3
        = @served_quiz.cloned_quiz_bank.title
      .col-xs-3
      .col-xs-3
    -@served_quiz.sharings.each do |sharing|  
      .col-xs-12.student-detail
        .col-xs-3
          -unless sharing.user.name.blank?
            %span.glyphicon.glyphicon-user
            %span
              =sharing.user.name
          -else
            %span.glyphicon.glyphicon-user
            %span
              =sharing.user.email  
        .col-xs-5
          %span
            ="Attempted: "
          %span.badge.warning
            = 0   
          %span
            ="Correct: "
          %span.badge.success
            = 0
          %span
            = "Wrong: "
          %span.badge.wrong
            = 0
        .col-xs-4
          Average    
      .col-xs-12.student-questions-detail
        %table.table
          %thead
            %th Question
            %th Answer
            %th Student Answer
            %th Grade
          %tbody  
            -@served_quiz.cloned_quiz_bank.cloned_questions.each do |cloned_question|
              %tr
                %td
                  = cloned_question.description.html_safe
                %td
                  = Answer
                %td
                  -@answer = Answer.find_answer_by_student_and_question(sharing.user,cloned_question)
                  = @answer.student_answer if @answer.present?
                  = "Not Attempted" if @answer.blank?
                %td
                  = show_correct(@answer) if @answer.present?
                  = "Not Graded" if @answer.blank?
