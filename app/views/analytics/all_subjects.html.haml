=render 'common/tabs'
.tab-content.padding-top40.tab-container
  .row
    .col-xs-3.left-panel
      = render partial: "analytics/left_panel"
    .col-xs-8.right-panel
      -if current_user.served_quizzes.present?
        .col-xs-4.col-xs-offset-4
          %h3
            Chart
        .col-xs-10.mar-top-10.col-xs-offset-1
          %img{src:"/assets/chart.gif",id:"up_logo_file2",style:"cursor:pointer;"}
        .col-xs-10.mar-top-20.col-xs-offset-1.analytics-table
          %table.table.table-striped
            %thead
              %th
                %span.glyphicon.glyphicon-user
                %span 
                  Subject
              %th
                %span.glyphicon.glyphicon-signal
                %span
                  Number of Quizzes
              %th
                %span.glyphicon.glyphicon-signal
                %span
                  Average    
                  
            %tbody
              -@subjects.each do |subject|
                %tr
                  %td
                    = subject.title
                  %td
                    = subject.cloned_quiz_banks.count
      -else
        %table.table
          %tbody
            %tr
              %td
                No Quiz Bank Served                                    

            